<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WelcomeActivity"

    >

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="10dp"
        android:fontFamily="@font/comfortaa_bold"

        android:padding="5dp"
        android:text="Welcome to Blood Donation"
        android:textAlignment="center"

        android:textColor="#ED1111"
        android:textSize="22sp"
        android:textStyle="bold"
        >

    </TextView>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="219dp"
        android:src="@drawable/bg"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.041">

    </ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="114dp"

        android:fontFamily="@font/montecarlo_regular"
        android:gravity="center"
        android:padding="10dp"
        android:text="रक्त दान करें ताकि आप कह सकें कि आपने मानव जाति की सेवा की है।"
        android:textAlignment="center"
        android:textColor="#ED1111"
        android:textSize="22sp"
        android:layout_margin="10dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="297dp">

    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="114dp"

        android:fontFamily="@font/montecarlo_regular"
        android:gravity="center"
        android:padding="10dp"
        android:text="خون کا عطیہ دیں تاکہ آپ کہہ سکیں کہ آپ نے بنی نوع انسان کی خدمت کی ہے۔"
        android:textAlignment="center"
        android:textColor="#ED1111"
        android:textSize="22sp"
        android:layout_margin="10dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="297dp">

    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="114dp"

        android:fontFamily="@font/montecarlo_regular"
        android:gravity="center"
        android:padding="10dp"
        android:text="Donate Blood So That You Can Say That You Have Served Mankind."
        android:textAlignment="center"
        android:textColor="#ED1111"
        android:textSize="22sp"
        android:layout_margin="10dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="297dp">

    </TextView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".FormActivity"
    >




<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:outlineSpotShadowColor="@color/black"
        app:cardBackgroundColor="#FF0201"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        android:layout_marginBottom="10dp"

        tools:layout_editor_absoluteX="-30dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:fontFamily="@font/ubuntu_regular"
            android:text="@string/blood_donation_form"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold">

        </TextView>
    </androidx.cardview.widget.CardView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:background="@drawable/shape"
        android:drawableLeft="@drawable/ic_name"
        android:drawablePadding="10dp"
        android:hint="Full Name"
        android:maxLines="1"
        android:maxLength="100"
        android:textColor="#FF0000"
        android:textColorHint="#FB0303"
        android:textColorHighlight="#FF0000"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:background="@drawable/shape"
        android:drawableLeft="@drawable/ic_baseline_phone_24"
        android:drawablePadding="10dp"
        android:hint="Phone Number"
        android:maxLines="1"
        android:maxLength="100"
        android:textColor="#FF0000"
        android:textColorHint="#FB0303"
        android:textColorHighlight="#FF0000"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:background="@drawable/shape"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:drawablePadding="10dp"
        android:hint="Email"
        android:maxLines="1"
        android:maxLength="100"
        android:textColor="#FF0000"
        android:textColorHint="#FB0303"
        android:textColorHighlight="#FF0000"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:background="@drawable/shape"
        android:drawableLeft="@drawable/ic_baseline_home_24"
        android:drawablePadding="10dp"
        android:hint="Address"

        android:maxLength="100"
        android:textColor="#FF0000"
        android:textColorHint="#FB0303"
        android:textColorHighlight="#FF0000"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Blood Group"
        android:textSize="20dp"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:textColor="#FF0000"
        android:fontFamily="@font/ubuntu_regular">

    </TextView>

    <Spinner
        android:id="@+id/coursesspinner"
        android:layout_width="272dp"
        android:layout_height="50dp"

        android:layout_marginStart="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp"

        tools:ignore="SpeakableTextPresentCheck" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Occupation"
        android:textSize="20dp"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:textColor="#FF0000"
        android:fontFamily="@font/ubuntu_regular">

    </TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:background="@drawable/shape"

        android:drawablePadding="10dp"
        android:hint="Your Job"

        android:maxLength="100"
        android:textColor="#FF0000"
        android:textColorHint="#FB0303"
        android:textColorHighlight="#FF0000"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Have you done blood donation before?"
        android:textSize="20dp"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:textColor="#FF0000"
        android:fontFamily="@font/ubuntu_regular">

    </TextView>
    <RadioGroup
        android:id="@+id/radioGroup"
        android:checkedButton="@+id/radio_button_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <RadioButton
        android:id="@+id/radio_button_1"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="50dp"
        android:padding="10dp"
        android:textColor="#FF0000"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_height="match_parent"
        android:text="Yes">

    </RadioButton>
    <RadioButton
        android:id="@+id/radio_button_2"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="50dp"
        android:padding="10dp"
        android:textColor="#FF0000"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_height="match_parent"
        android:text="NO">

    </RadioButton>
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="When was the last time you did a blood donation"
        android:textSize="20dp"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:textColor="#FF0000"
        android:fontFamily="@font/ubuntu_regular">

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:background="@drawable/shape"
        android:drawableLeft="@drawable/ic_baseline_date_range_24"
        android:drawablePadding="10dp"
        android:hint="Choose Date"
        android:maxLines="1"
        android:maxLength="100"
        android:textColor="#FF0000"
        android:textColorHint="#FB0303"
        android:textColorHighlight="#FF0000"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Have you had any disease?"
        android:textSize="20dp"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:textColor="#FF0000"
        android:fontFamily="@font/ubuntu_regular">

    </TextView>
    <RadioGroup
        android:id="@+id/radioGroup1"
        android:checkedButton="@+id/radio_button_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RadioButton
            android:id="@+id/radio_button_3"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="50dp"
            android:padding="10dp"
            android:textColor="#FF0000"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_height="match_parent"
            android:text="Yes">

        </RadioButton>
        <RadioButton
            android:id="@+id/radio_button_4"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="50dp"
            android:padding="10dp"
            android:textColor="#FF0000"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_height="match_parent"
            android:text="NO">

        </RadioButton>
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Which disease have you suffered from?"
        android:textSize="20dp"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:textColor="#FF0000"
        android:fontFamily="@font/ubuntu_regular">

    </TextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:background="@drawable/shape"

        android:drawablePadding="10dp"
        android:hint="Disease Name"
        android:maxLines="1"
        android:maxLength="100"
        android:textColor="#FF0000"
        android:textColorHint="#FB0303"
        android:textColorHighlight="#FF0000"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Do you have any allergies?"
        android:textSize="20dp"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:textColor="#FF0000"
        android:fontFamily="@font/ubuntu_regular">

    </TextView>
    <RadioGroup
        android:id="@+id/radioGroup4"
        android:checkedButton="@+id/radio_button_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RadioButton
            android:id="@+id/radio_button_5"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="50dp"
            android:padding="10dp"
            android:textColor="#FF0000"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_height="match_parent"
            android:text="Yes">

        </RadioButton>
        <RadioButton
            android:id="@+id/radio_button_6"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="50dp"
            android:padding="10dp"
            android:textColor="#FF0000"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_height="match_parent"
            android:text="NO">

        </RadioButton>
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Which allergies do you suffer from?"
        android:textSize="20dp"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:textColor="#FF0000"
        android:fontFamily="@font/ubuntu_regular">

    </TextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:background="@drawable/shape"

        android:drawablePadding="10dp"
        android:hint="Allergies Name"
        android:maxLines="1"
        android:maxLength="100"
        android:textColor="#FF0000"
        android:textColorHint="#FB0303"
        android:textColorHighlight="#FF0000"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I consent to this donation( Signature Please.. )"
        android:textSize="20dp"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:textColor="#FF0000"
        android:fontFamily="@font/ubuntu_regular">

    </TextView>
    <com.williamww.silkysignature.views.SignaturePad

    android:id="@+id/signature_pad"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:padding="10dp"
    android:layout_margin="10dp"
    app:penColor="@android:color/black">

    </com.williamww.silkysignature.views.SignaturePad>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"

        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="#FF0000"
        >

    </View>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/clearsignature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/submit"
            android:padding="10dp"
            android:elevation="20dp"
            android:shadowColor="@color/black"
            android:text="Clear Signature"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#F10629"
            android:textSize="15dp">

        </Button>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/submits"
            android:layout_width="143dp"
            android:layout_height="wrap_content"

            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/submit"
            android:elevation="20dp"
            android:padding="10dp"

            android:shadowColor="@color/black"
            android:text="Submit Form"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="15dp">

        </androidx.appcompat.widget.AppCompatButton>



    </LinearLayout>




</LinearLayout>


</ScrollView>

